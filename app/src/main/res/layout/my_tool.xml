<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:aandroid="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:orientation="horizontal">


    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            aandroid:ignore="UselessParent">

        <at.markushi.ui.CircleButton
                android:id="@+id/id_calender"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:onClick="calender_button"
                android:src="@drawable/ic_calender"
                app:cb_color="@color/colorPrimary"
                android:tooltipText="跳转日期"
                app:cb_pressedRingWidth="5dip" />

        <at.markushi.ui.CircleButton
                android:id="@+id/id_export"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:onClick="export_button"
                android:src="@drawable/ic_export"
                app:cb_color="@color/colorPrimary"
                android:tooltipText="日记导出"
                app:cb_pressedRingWidth="5dip" />
        <at.markushi.ui.CircleButton
                android:id="@+id/id_settings"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:onClick="settings_button"
                android:src="@drawable/ic_settings"
                app:cb_color="@color/colorPrimary"
                android:tooltipText="设置"
                app:cb_pressedRingWidth="5dip" />
    </LinearLayout>



</FrameLayout>