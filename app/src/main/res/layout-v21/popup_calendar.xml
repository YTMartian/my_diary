<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray">

    <DatePicker
            android:id="@+id/my_date_picker"
            android:layout_width="358dp"
            android:layout_height="462dp"
            android:datePickerMode="calendar"
            android:firstDayOfWeek="2"
            android:focusableInTouchMode="false"
            android:scrollbarStyle="outsideOverlay"
            android:theme="@style/calendarStyle"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:gravity="bottom|end"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="11dp"
                tools:layout_editor_absoluteY="384dp">

            <Button
                    android:id="@+id/date_pick_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:background="@drawable/ripple_style"
                    android:focusable="true"
                    android:onClick="datePickCancelButton"
                    android:text="@string/cancel"
                    android:textColor="@color/colorPrimaryLight"
                    tools:ignore="ButtonStyle,MissingConstraints">

            </Button>

            <Button
                    android:id="@+id/date_pick_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/ripple_style"
                    android:onClick="datePickOkButton"
                    android:text="@string/ok"
                    android:textColor="@color/colorPrimaryLight"
                    tools:ignore="ButtonStyle,MissingConstraints">

            </Button>
        </LinearLayout>
    </DatePicker>


</androidx.constraintlayout.widget.ConstraintLayout>